{
    "family": "${ECS_TASK}",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME}:${IMAGE_VERSION}",
            "name": "${IMAGE_NAME}",
            "cpu": 128,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80
                },
                {
                    "hostPort": 8080,
                    "protocol": "tcp",
                    "containerPort": 8080
                }
            ],
            "dockerLabels": {
                "traefik.frontend.rule": "Host:traefik.${AWS_ECS_CLUSTER_NAME}.${AWS_VIRTUAL_HOST}",
                "traefik.enabled": "true",
                "traefik.port": "8080"
              },
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "${AWS_VIRTUAL_HOST}"
                }
            ]
        }
    ]
}